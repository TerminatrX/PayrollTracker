<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PayrollManager.UI.Views.PayRunsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- PAGE HEADER                                                      -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Border Grid.Row="0" Padding="24,20" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Title & Breadcrumbs -->
                <StackPanel>
                    <!-- Breadcrumbs -->
                    <StackPanel Orientation="Horizontal">
                        <HyperlinkButton Content="Payroll" Padding="0" />
                        <FontIcon Glyph="&#xE76C;" FontSize="10" Opacity="0.5" />
                        <TextBlock Text="Pay Run Wizard" Opacity="0.7" VerticalAlignment="Center" />
                    </StackPanel>
                    
                    <TextBlock Text="Pay Run Wizard" 
                               Style="{ThemeResource TitleLargeTextBlockStyle}"
                               FontWeight="Black" />
                    <TextBlock Text="Configure, enter data, and finalize payroll for the current period."
                               Opacity="0.6" />
                </StackPanel>

                <!-- Header Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal"
                            VerticalAlignment="Top">
                    <Button Content="Save Draft"
                            Command="{x:Bind ViewModel.SaveDraftCommand}" />
                    
                    <Button Style="{ThemeResource AccentButtonStyle}"
                            Command="{x:Bind ViewModel.GoNextCommand}"
                            IsEnabled="{x:Bind ViewModel.CanGoNext, Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Next Step" />
                            <FontIcon Glyph="&#xE72A;" FontSize="12" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- MAIN CONTENT: STEPPER + DATA GRID                               -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Grid Grid.Row="1" Padding="24" ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- ─────────────────────────────────────────────────────────── -->
            <!-- LEFT PANEL: STEPPER & PERIOD CONFIG                         -->
            <!-- ─────────────────────────────────────────────────────────── -->
            <StackPanel Grid.Column="0">
                
                <!-- Wizard Stepper -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1" CornerRadius="8"
                        Padding="20">
                    <StackPanel>
                        
                        <!-- Step 1: Set Dates -->
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>

                            <!-- Step Icon -->
                            <Border Grid.Column="0" Grid.Row="0"
                                    Width="32" Height="32" CornerRadius="16"
                                    Background="{x:Bind ViewModel.Step1Background, Mode=OneWay}"
                                    BorderBrush="{x:Bind ViewModel.Step1BorderBrush, Mode=OneWay}"
                                    BorderThickness="1"
                                    HorizontalAlignment="Center">
                                <FontIcon Glyph="{x:Bind ViewModel.Step1Icon, Mode=OneWay}" 
                                          FontSize="12"
                                          Foreground="{x:Bind ViewModel.Step1Foreground, Mode=OneWay}" />
                            </Border>
                            
                            <!-- Connector Line -->
                            <Border Grid.Column="0" Grid.Row="1" 
                                    Width="2" 
                                    Background="{x:Bind ViewModel.Step1ConnectorColor, Mode=OneWay}"
                                    HorizontalAlignment="Center" />

                            <!-- Step Text -->
                            <StackPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Center">
                                <TextBlock Text="Set Dates" 
                                           FontWeight="{x:Bind ViewModel.Step1FontWeight, Mode=OneWay}"
                                           Foreground="{x:Bind ViewModel.Step1TextColor, Mode=OneWay}" />
                                <TextBlock Text="{x:Bind ViewModel.Step1Status, Mode=OneWay}"
                                           FontSize="12" Opacity="0.6" />
                            </StackPanel>
                        </Grid>

                        <!-- Step 2: Enter Hours -->
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>

                            <Border Grid.Column="0" Grid.Row="0"
                                    Width="32" Height="32" CornerRadius="16"
                                    Background="{x:Bind ViewModel.Step2Background, Mode=OneWay}"
                                    BorderBrush="{x:Bind ViewModel.Step2BorderBrush, Mode=OneWay}"
                                    BorderThickness="1"
                                    HorizontalAlignment="Center">
                                <FontIcon Glyph="{x:Bind ViewModel.Step2Icon, Mode=OneWay}" 
                                          FontSize="12"
                                          Foreground="{x:Bind ViewModel.Step2Foreground, Mode=OneWay}" />
                            </Border>
                            
                            <Border Grid.Column="0" Grid.Row="1" 
                                    Width="2" 
                                    Background="{x:Bind ViewModel.Step2ConnectorColor, Mode=OneWay}"
                                    HorizontalAlignment="Center" />

                            <StackPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Center">
                                <TextBlock Text="Enter Hours" 
                                           FontWeight="{x:Bind ViewModel.Step2FontWeight, Mode=OneWay}"
                                           Foreground="{x:Bind ViewModel.Step2TextColor, Mode=OneWay}" />
                                <TextBlock Text="{x:Bind ViewModel.Step2Status, Mode=OneWay}"
                                           FontSize="12" Opacity="0.6" />
                            </StackPanel>
                        </Grid>

                        <!-- Step 3: Review & Finalize -->
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Width="32" Height="32" CornerRadius="16"
                                    Background="{x:Bind ViewModel.Step3Background, Mode=OneWay}"
                                    BorderBrush="{x:Bind ViewModel.Step3BorderBrush, Mode=OneWay}"
                                    BorderThickness="1"
                                    HorizontalAlignment="Center">
                                <FontIcon Glyph="{x:Bind ViewModel.Step3Icon, Mode=OneWay}" 
                                          FontSize="12"
                                          Foreground="{x:Bind ViewModel.Step3Foreground, Mode=OneWay}" />
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Review &amp; Finalize" 
                                           FontWeight="{x:Bind ViewModel.Step3FontWeight, Mode=OneWay}"
                                           Foreground="{x:Bind ViewModel.Step3TextColor, Mode=OneWay}" />
                                <TextBlock Text="{x:Bind ViewModel.Step3Status, Mode=OneWay}"
                                           FontSize="12" Opacity="0.6" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Period Details Card -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1" CornerRadius="8"
                        Padding="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE787;" FontSize="16" 
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                            <TextBlock Text="Period Details" FontWeight="Bold" />
                        </StackPanel>

                        <StackPanel>
                            <!-- Pay Period -->
                            <StackPanel>
                                <TextBlock Text="PAY PERIOD" 
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           FontWeight="Bold" Opacity="0.5" />
                                <Border Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                        CornerRadius="4" Padding="12,8"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1">
                                    <Grid>
                                        <TextBlock Text="{x:Bind ViewModel.PeriodRangeDisplay, Mode=OneWay}"
                                                   FontSize="13" FontWeight="Medium" />
                                        <FontIcon Glyph="&#xE70F;" FontSize="12" 
                                                  HorizontalAlignment="Right" Opacity="0.5" />
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <!-- Pay Date -->
                            <StackPanel>
                                <TextBlock Text="PAY DATE" 
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           FontWeight="Bold" Opacity="0.5" />
                                <Border Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                        CornerRadius="4" Padding="12,8"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1">
                                    <Grid>
                                        <TextBlock Text="{x:Bind ViewModel.PayDateDisplay, Mode=OneWay}"
                                                   FontSize="13" FontWeight="Medium" />
                                        <FontIcon Glyph="&#xE787;" FontSize="12" 
                                                  HorizontalAlignment="Right" Opacity="0.5" />
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- ─────────────────────────────────────────────────────────── -->
            <!-- RIGHT PANEL: DATA GRID & SUMMARY                            -->
            <!-- ─────────────────────────────────────────────────────────── -->
            <Border Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Grid Header -->
                    <Border Grid.Row="0" 
                            Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                            Padding="16,12"
                            CornerRadius="8,8,0,0"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Title & Badge -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Employee Time Tracking" 
                                           Style="{ThemeResource BodyStrongTextBlockStyle}"
                                           FontSize="16" />
                                <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                                        Opacity="0.15" CornerRadius="12" Padding="10,4">
                                    <TextBlock FontSize="11" FontWeight="Bold"
                                               Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}">
                                        <Run Text="{x:Bind ViewModel.EmployeeCount, Mode=OneWay}" />
                                        <Run Text=" Employees Loaded" />
                                    </TextBlock>
                                </Border>
                            </StackPanel>

                            <!-- Search & Filter -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <AutoSuggestBox x:Name="EmployeeSearchBox"
                                                PlaceholderText="Search employees..."
                                                QueryIcon="Find"
                                                Width="220"
                                                Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                
                                <Button ToolTipService.ToolTip="Filter">
                                    <FontIcon Glyph="&#xE71C;" FontSize="14" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Data Grid -->
                    <controls:DataGrid Grid.Row="1"
                                       x:Name="PayrunDataGrid"
                                       AutoGenerateColumns="False"
                                       ItemsSource="{x:Bind ViewModel.EmployeeRows, Mode=OneWay}"
                                       CanUserReorderColumns="True"
                                       CanUserResizeColumns="True"
                                       CanUserSortColumns="True"
                                       GridLinesVisibility="Horizontal"
                                       AlternatingRowBackground="{ThemeResource SubtleFillColorTertiaryBrush}">
                        <controls:DataGrid.Columns>
                            <!-- Checkbox Column -->
                            <controls:DataGridCheckBoxColumn Header="" 
                                                              Binding="{Binding IsIncluded, Mode=TwoWay}" 
                                                              Width="50" />

                            <!-- Employee Name Column with Avatar -->
                            <controls:DataGridTemplateColumn Header="EMPLOYEE NAME" Width="180">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Padding="8,6">
                                            <!-- Initials Avatar -->
                                            <Border Width="28" Height="28" CornerRadius="14"
                                                    Background="{Binding InitialsBackground}">
                                                <TextBlock Text="{Binding Initials}"
                                                           FontSize="10" FontWeight="Bold"
                                                           Foreground="{Binding InitialsForeground}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" />
                                            </Border>
                                            <TextBlock Text="{Binding FullName}"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>

                            <!-- Employee ID -->
                            <controls:DataGridTextColumn Header="EMPLOYEE ID" 
                                                          Binding="{Binding EmployeeId}" 
                                                          Width="110" />

                            <!-- Department -->
                            <controls:DataGridTextColumn Header="DEPARTMENT" 
                                                          Binding="{Binding Department}" 
                                                          Width="120" />

                            <!-- Regular Hours (Editable) -->
                            <controls:DataGridTemplateColumn Header="REG. HOURS" Width="100">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <NumberBox Value="{Binding RegularHours, Mode=TwoWay}"
                                                   Minimum="0" Maximum="168"
                                                   SpinButtonPlacementMode="Compact"
                                                   HorizontalAlignment="Stretch"
                                                   Margin="4" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>

                            <!-- Overtime Hours (Editable) -->
                            <controls:DataGridTemplateColumn Header="OT HOURS" Width="100">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <NumberBox Value="{Binding OvertimeHours, Mode=TwoWay}"
                                                   Minimum="0" Maximum="80"
                                                   SpinButtonPlacementMode="Compact"
                                                   HorizontalAlignment="Stretch"
                                                   Margin="4"
                                                   Foreground="{Binding OvertimeColor}" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>

                            <!-- Hourly Rate (Read-only) -->
                            <controls:DataGridTemplateColumn Header="HOURLY RATE" Width="100">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding HourlyRateDisplay}"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Padding="8,0" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>

                            <!-- Gross Pay (Calculated) -->
                            <controls:DataGridTemplateColumn Header="GROSS PAY" Width="110">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding GrossPayDisplay}"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Padding="8,0" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>

                    <!-- Summary Footer -->
                    <Border Grid.Row="2"
                            Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                            Padding="24,16"
                            CornerRadius="0,0,8,8"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="0,1,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Total Gross -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="TOTAL GROSS" 
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           FontWeight="Bold" Opacity="0.5" />
                                <TextBlock Text="{x:Bind ViewModel.TotalGrossDisplay, Mode=OneWay}"
                                           FontSize="20" FontWeight="Black" />
                            </StackPanel>

                            <!-- Estimated Taxes -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="ESTIMATED TAXES" 
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           FontWeight="Bold" Opacity="0.5" />
                                <TextBlock Text="{x:Bind ViewModel.EstimatedTaxesDisplay, Mode=OneWay}"
                                           FontSize="20" FontWeight="Black"
                                           Foreground="{StaticResource WarningBrush}" />
                            </StackPanel>

                            <!-- Benefits/Deductions -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="BENEFITS/DEDUCTIONS" 
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           FontWeight="Bold" Opacity="0.5" />
                                <TextBlock Text="{x:Bind ViewModel.BenefitsDeductionsDisplay, Mode=OneWay}"
                                           FontSize="20" FontWeight="Black"
                                           Foreground="{StaticResource AccentBrush}" />
                            </StackPanel>

                            <!-- Net Pay Total -->
                            <StackPanel Grid.Column="3" HorizontalAlignment="Right">
                                <TextBlock Text="NET PAY TOTAL" 
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           FontWeight="Bold" Opacity="0.5"
                                           HorizontalAlignment="Right" />
                                <TextBlock Text="{x:Bind ViewModel.NetPayTotalDisplay, Mode=OneWay}"
                                           FontSize="24" FontWeight="Black"
                                           Foreground="{StaticResource SuccessBrush}"
                                           HorizontalAlignment="Right" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- PERSISTENT WIZARD FOOTER                                        -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Border Grid.Row="2"
                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0"
                        Command="{x:Bind ViewModel.GoBackCommand}"
                        IsEnabled="{x:Bind ViewModel.CanGoBack, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE72B;" FontSize="12" />
                        <TextBlock Text="Back" />
                    </StackPanel>
                </Button>

                <!-- Status Message -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                               FontSize="12" 
                               Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                               Visibility="{x:Bind ViewModel.StatusMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}" />
                </StackPanel>

                <!-- Status & Primary Action -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="{x:Bind ViewModel.AutoSaveStatus, Mode=OneWay}"
                               FontSize="12" Opacity="0.5"
                               VerticalAlignment="Center" />

                    <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                                  Width="20" Height="20" />

                    <Button Style="{ThemeResource AccentButtonStyle}"
                            Command="{x:Bind ViewModel.FinalizeCommand}"
                            IsEnabled="{x:Bind ViewModel.CanFinalize, Mode=OneWay}"
                            Padding="24,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Review &amp; Finalize Run" FontWeight="Bold" />
                            <FontIcon Glyph="&#xE72A;" FontSize="12" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
