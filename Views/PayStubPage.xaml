<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PayrollManager.UI.Views.PayStubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- LIST VIEW: Show when no pay stub is selected                    -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Visibility="{x:Bind ViewModel.HasSelectedPayStub, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <StackPanel Padding="32" MaxWidth="1200" HorizontalAlignment="Center">
                <!-- Header -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Pay Stubs" 
                               Style="{ThemeResource TitleLargeTextBlockStyle}"
                               FontWeight="Black" />
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBox x:Name="SearchBox"
                                 PlaceholderText="Search pay stubs..."
                                 Width="280"
                                 Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,12,0" />
                        
                        <ComboBox Header="Year" Width="120"
                                  SelectedItem="{x:Bind ViewModel.YearFilter, Mode=TwoWay}"
                                  ItemsSource="{x:Bind ViewModel.AvailableYears, Mode=OneWay}"
                                  Margin="0,0,12,0" />
                        
                        <ComboBox Header="Period" Width="140"
                                  SelectedIndex="{x:Bind ViewModel.PeriodFilterIndex, Mode=TwoWay}">
                            <ComboBoxItem Content="All" />
                            <ComboBoxItem Content="Q1" />
                            <ComboBoxItem Content="Q2" />
                            <ComboBoxItem Content="Q3" />
                            <ComboBoxItem Content="Q4" />
                        </ComboBox>
                    </StackPanel>
                </Grid>
                
                <!-- Pay Stubs List -->
                <controls:DataGrid AutoGenerateColumns="False"
                                   ItemsSource="{x:Bind ViewModel.FilteredPayStubs, Mode=OneWay}"
                                   SelectedItem="{x:Bind ViewModel.SelectedPayStub, Mode=TwoWay}"
                                   CanUserReorderColumns="True"
                                   CanUserResizeColumns="True"
                                   CanUserSortColumns="True"
                                   IsReadOnly="True">
                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn Header="Statement #" 
                                                      Binding="{Binding StatementNumber}" 
                                                      Width="120" />
                        <controls:DataGridTextColumn Header="Employee" 
                                                      Binding="{Binding EmployeeName}" 
                                                      Width="*" />
                        <controls:DataGridTextColumn Header="Period" 
                                                      Binding="{Binding PeriodRange}" 
                                                      Width="200" />
                        <controls:DataGridTemplateColumn Header="Pay Date" Width="120">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding PayDate, Converter={StaticResource DateConverter}}" />
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                        <controls:DataGridTemplateColumn Header="Gross Pay" Width="120">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding GrossPay, Converter={StaticResource CurrencyConverter}}" 
                                               HorizontalAlignment="Right" />
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                        <controls:DataGridTemplateColumn Header="Net Pay" Width="120">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding NetPay, Converter={StaticResource CurrencyConverter}}" 
                                               HorizontalAlignment="Right"
                                               FontWeight="SemiBold" />
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>
                
                <!-- Empty State -->
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Margin="0,100,0,0"
                            Spacing="16">
                    <FontIcon Glyph="&#xE8A1;" FontSize="64" Opacity="0.3" />
                    <TextBlock Text="No pay stubs found"
                               Style="{ThemeResource SubtitleTextBlockStyle}"
                               Opacity="0.5"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- DETAIL VIEW: Show when a pay stub is selected                    -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Visibility="{x:Bind ViewModel.HasSelectedPayStub, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Padding="32" MaxWidth="1200" 
                        HorizontalAlignment="Center">

                <!-- ═══════════════════════════════════════════════════════════════ -->
                <!-- BREADCRUMBS                                                      -->
                <!-- ═══════════════════════════════════════════════════════════════ -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <HyperlinkButton Content="Pay Stubs" Padding="0"
                                     Command="{x:Bind ViewModel.NavigatePayStubsCommand}" />
                    <FontIcon Glyph="&#xE76C;" FontSize="10" Opacity="0.5" VerticalAlignment="Center" />
                    <TextBlock Text="{x:Bind ViewModel.StatementNumber, Mode=OneWay}"
                               Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                               FontWeight="Bold" VerticalAlignment="Center" />
                </StackPanel>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- PAGE HEADER & ACTIONS                                           -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Pay Statement" 
                               Style="{ThemeResource TitleLargeTextBlockStyle}"
                               FontWeight="Black" />
                    <StackPanel Orientation="Horizontal" Opacity="0.6">
                        <FontIcon Glyph="&#xE787;" FontSize="12" />
                        <TextBlock>
                            <Run Text="Period: " />
                            <Run Text="{x:Bind ViewModel.PeriodRange, Mode=OneWay}" />
                            <Run Text=" | Paid: " />
                            <Run Text="{x:Bind ViewModel.PayDate, Mode=OneWay}" />
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{x:Bind ViewModel.DownloadCsvCommand}">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE896;" FontSize="14" />
                            <TextBlock Text="Download CSV" />
                        </StackPanel>
                    </Button>
                    <Button Command="{x:Bind ViewModel.ContactSupportCommand}">
                        <TextBlock Text="Support" />
                    </Button>
                </StackPanel>
            </Grid>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- PROFILE SECTION: EMPLOYER | EMPLOYEE | NET PAY                  -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <Grid ColumnSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Employer + Employee Card -->
                <Border Grid.Column="0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1" CornerRadius="12"
                        Padding="24">
                    <Grid ColumnSpacing="32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Employer Info -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="EMPLOYER" 
                                       FontSize="11" FontWeight="Bold"
                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                       CharacterSpacing="50" />
                            <StackPanel Orientation="Horizontal">
                                <Border Width="56" Height="56" CornerRadius="8"
                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                        Opacity="0.15">
                                    <FontIcon Glyph="&#xE80F;" FontSize="24"
                                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind ViewModel.CompanyName, Mode=OneWay}"
                                               FontSize="16" FontWeight="Bold" />
                                    <TextBlock Text="{x:Bind ViewModel.CompanyAddress, Mode=OneWay}"
                                               FontSize="12" Opacity="0.6"
                                               TextWrapping="Wrap" MaxWidth="200" />
                                    <TextBlock FontSize="12" Opacity="0.6">
                                        <Run Text="EIN: " />
                                        <Run Text="{x:Bind ViewModel.CompanyEin, Mode=OneWay}" />
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Divider -->
                        <Border Grid.Column="1" Width="1" 
                                Background="{ThemeResource CardStrokeColorDefaultBrush}" />

                        <!-- Employee Info -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="EMPLOYEE" 
                                       FontSize="11" FontWeight="Bold"
                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                       CharacterSpacing="50" />
                            <StackPanel>
                                <TextBlock Text="{x:Bind ViewModel.EmployeeName, Mode=OneWay}"
                                           FontSize="16" FontWeight="Bold" />
                                <Grid ColumnSpacing="24">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="EMPLOYEE ID"
                                               FontSize="10" FontWeight="Bold" Opacity="0.5" />
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="TAX STATUS"
                                               FontSize="10" FontWeight="Bold" Opacity="0.5" />
                                    <TextBlock Grid.Row="1" Grid.Column="0" 
                                               Text="{x:Bind ViewModel.EmployeeId, Mode=OneWay}"
                                               FontWeight="SemiBold" />
                                    <TextBlock Grid.Row="1" Grid.Column="1" 
                                               Text="{x:Bind ViewModel.TaxStatus, Mode=OneWay}"
                                               FontWeight="SemiBold" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Net Pay Hero Card -->
                <Border Grid.Column="1"
                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                        CornerRadius="12"
                        Padding="24">
                    <StackPanel>
                        <TextBlock Text="Net Take-home Pay" 
                                   FontSize="13" Opacity="0.8"
                                   Foreground="White" />
                        <TextBlock Text="{x:Bind ViewModel.NetPay, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                   FontSize="40" FontWeight="Black"
                                   Foreground="White" />

                        <Border Height="1" Background="White" Opacity="0.2" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Gross Pay" 
                                       FontSize="12" Opacity="0.7" Foreground="White" />
                            <TextBlock Grid.Column="1" 
                                       Text="{x:Bind ViewModel.GrossPay, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                       FontWeight="Bold" Foreground="White" />
                        </Grid>

                        <Button HorizontalAlignment="Stretch"
                                Background="White"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Command="{x:Bind ViewModel.ViewBreakdownCommand}">
                            <TextBlock Text="View Full Breakdown" FontWeight="Bold" />
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- FINANCIAL BREAKDOWN: EARNINGS | DEDUCTIONS | TAXES              -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <Grid ColumnSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- ─────────────────────────────────────────────────────────── -->
                <!-- EARNINGS TABLE                                              -->
                <!-- ─────────────────────────────────────────────────────────── -->
                <Border Grid.Column="0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1" CornerRadius="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" 
                                Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                Padding="16,12" CornerRadius="12,12,0,0">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon Glyph="&#xE710;" FontSize="14" 
                                              Foreground="#22C55E" />
                                    <TextBlock Text="Earnings" FontWeight="Bold" />
                                </StackPanel>
                                <TextBlock Text="Current" FontSize="11" FontWeight="Bold"
                                           Opacity="0.5" HorizontalAlignment="Right" />
                            </Grid>
                        </Border>

                        <!-- Content -->
                        <ListView Grid.Row="1"
                                  ItemsSource="{x:Bind ViewModel.EarningLines, Mode=OneWay}"
                                  SelectionMode="None"
                                  Padding="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="16,12" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="80" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Description}" FontWeight="Medium" />
                                        <TextBlock Grid.Column="1" Text="{Binding RateDisplay}"
                                                   FontSize="12" Opacity="0.6" />
                                        <TextBlock Grid.Column="2" Text="{Binding AmountDisplay}"
                                                   FontWeight="SemiBold" HorizontalAlignment="Right" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="0" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>

                        <!-- Footer Total -->
                        <Border Grid.Row="2"
                                Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                Padding="16,12" CornerRadius="0,0,12,12">
                            <Grid>
                                <TextBlock Text="Total Gross" FontWeight="Bold" Opacity="0.7" />
                                <TextBlock Text="{x:Bind ViewModel.TotalGross, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                           FontWeight="Black" HorizontalAlignment="Right" />
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- ─────────────────────────────────────────────────────────── -->
                <!-- DEDUCTIONS TABLE                                            -->
                <!-- ─────────────────────────────────────────────────────────── -->
                <Border Grid.Column="1"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1" CornerRadius="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" 
                                Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                Padding="16,12" CornerRadius="12,12,0,0">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon Glyph="&#xE738;" FontSize="14" 
                                              Foreground="#F97316" />
                                    <TextBlock Text="Deductions" FontWeight="Bold" />
                                </StackPanel>
                                <TextBlock Text="Pre-Tax" FontSize="11" FontWeight="Bold"
                                           Opacity="0.5" HorizontalAlignment="Right" />
                            </Grid>
                        </Border>

                        <!-- Content -->
                        <ListView Grid.Row="1"
                                  ItemsSource="{x:Bind ViewModel.DeductionLines, Mode=OneWay}"
                                  SelectionMode="None"
                                  Padding="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="16,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="80" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Description}" FontWeight="Medium" />
                                        <TextBlock Grid.Column="1" Text="{Binding AmountDisplay}"
                                                   FontWeight="SemiBold" HorizontalAlignment="Right" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="0" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>

                        <!-- Footer Total -->
                        <Border Grid.Row="2"
                                Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                Padding="16,12" CornerRadius="0,0,12,12">
                            <Grid>
                                <TextBlock Text="Total Deductions" FontWeight="Bold" Opacity="0.7" />
                                <TextBlock Text="{x:Bind ViewModel.TotalDeductions, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                           FontWeight="Black" HorizontalAlignment="Right" />
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- ─────────────────────────────────────────────────────────── -->
                <!-- TAXES TABLE                                                 -->
                <!-- ─────────────────────────────────────────────────────────── -->
                <Border Grid.Column="2"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1" CornerRadius="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" 
                                Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                Padding="16,12" CornerRadius="12,12,0,0">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon Glyph="&#xE8C7;" FontSize="14" 
                                              Foreground="#EF4444" />
                                    <TextBlock Text="Taxes" FontWeight="Bold" />
                                </StackPanel>
                                <TextBlock Text="Withholdings" FontSize="11" FontWeight="Bold"
                                           Opacity="0.5" HorizontalAlignment="Right" />
                            </Grid>
                        </Border>

                        <!-- Content -->
                        <ListView Grid.Row="1"
                                  ItemsSource="{x:Bind ViewModel.TaxLines, Mode=OneWay}"
                                  SelectionMode="None"
                                  Padding="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="16,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="80" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Description}" FontWeight="Medium" />
                                        <TextBlock Grid.Column="1" Text="{Binding AmountDisplay}"
                                                   FontWeight="SemiBold" HorizontalAlignment="Right" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="0" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>

                        <!-- Footer Total -->
                        <Border Grid.Row="2"
                                Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                Padding="16,12" CornerRadius="0,0,12,12">
                            <Grid>
                                <TextBlock Text="Total Taxes" FontWeight="Bold" Opacity="0.7" />
                                <TextBlock Text="{x:Bind ViewModel.TotalTaxes, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                           FontWeight="Black" HorizontalAlignment="Right" />
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- YTD CUMULATIVE TOTALS BANNER                                    -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <Border Background="{ThemeResource SolidBackgroundFillColorQuarternaryBrush}"
                    CornerRadius="12"
                    BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                    BorderThickness="4,0,0,0"
                    Padding="24">
                <StackPanel>
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE9D9;" FontSize="18" 
                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                        <TextBlock Text="Year-to-Date Cumulative Totals" 
                                   FontSize="16" FontWeight="Bold" />
                    </StackPanel>

                    <!-- YTD Values Grid -->
                    <Grid ColumnSpacing="48">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="YTD GROSS" 
                                       FontSize="10" FontWeight="Bold" Opacity="0.5"
                                       CharacterSpacing="50" />
                            <TextBlock Text="{x:Bind ViewModel.YtdGross, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                       FontSize="22" FontWeight="Black" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="YTD DEDUCTIONS" 
                                       FontSize="10" FontWeight="Bold" Opacity="0.5"
                                       CharacterSpacing="50" />
                            <TextBlock Text="{x:Bind ViewModel.YtdDeductions, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                       FontSize="22" FontWeight="Black"
                                       Foreground="#F97316" />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="YTD TAXES" 
                                       FontSize="10" FontWeight="Bold" Opacity="0.5"
                                       CharacterSpacing="50" />
                            <TextBlock Text="{x:Bind ViewModel.YtdTaxes, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                       FontSize="22" FontWeight="Black"
                                       Foreground="#EF4444" />
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock Text="YTD NET PAY" 
                                       FontSize="10" FontWeight="Bold" Opacity="0.5"
                                       CharacterSpacing="50" />
                            <TextBlock Text="{x:Bind ViewModel.YtdNetPay, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                       FontSize="22" FontWeight="Black"
                                       Foreground="#22C55E" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- PAGE FOOTER                                                      -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="0,24,0,0"
                    Margin="0,16,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Opacity="0.5">
                        <TextBlock Text="{x:Bind ViewModel.CompanyCopyright, Mode=OneWay}" FontSize="12" />
                        <TextBlock Text="Enterprise Payroll Systems" FontSize="12" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <HyperlinkButton Content="Privacy Policy" FontSize="12" />
                        <HyperlinkButton Content="Terms of Service" FontSize="12" />
                        <HyperlinkButton Content="Accessibility Statement" FontSize="12" />
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
