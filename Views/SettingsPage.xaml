<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PayrollManager.UI.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24" MaxWidth="800">
            <TextBlock Text="Company Settings" Style="{StaticResource PageTitleStyle}" />

            <!-- Company Information -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="COMPANY INFORMATION" Style="{StaticResource SectionTitleStyle}" />
                    
                    <TextBox Header="Company Name" 
                             Text="{x:Bind ViewModel.CompanyName, Mode=TwoWay}"
                             Style="{StaticResource FormTextBoxStyle}"
                             Width="400" />
                    
                    <TextBox Header="Company Address" 
                             Text="{x:Bind ViewModel.CompanyAddress, Mode=TwoWay}"
                             Style="{StaticResource FormTextBoxStyle}"
                             Width="400"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="80" />
                    
                    <TextBox Header="Tax ID / EIN" 
                             Text="{x:Bind ViewModel.TaxId, Mode=TwoWay}"
                             Style="{StaticResource FormTextBoxStyle}"
                             Width="200" />
                </StackPanel>
            </Border>

            <!-- Pay Configuration -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="PAY CONFIGURATION" Style="{StaticResource SectionTitleStyle}" />
                    
                    <StackPanel Orientation="Horizontal" Spacing="24">
                        <NumberBox Header="Pay Periods Per Year" 
                                   Value="{x:Bind ViewModel.PayPeriodsPerYear, Mode=TwoWay}"
                                   Style="{StaticResource FormNumberBoxStyle}"
                                   Minimum="1"
                                   Maximum="52"
                                   SpinButtonPlacementMode="Compact" />
                        
                        <NumberBox Header="Default Hours Per Period" 
                                   Value="{x:Bind ViewModel.DefaultHoursPerPeriod, Mode=TwoWay}"
                                   Style="{StaticResource FormNumberBoxStyle}"
                                   Minimum="1"
                                   Maximum="168"
                                   SpinButtonPlacementMode="Compact" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Tax Rates -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="TAX RATES (%)" Style="{StaticResource SectionTitleStyle}" />
                    
                    <Grid ColumnSpacing="24" RowSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <NumberBox Grid.Row="0" Grid.Column="0"
                                   Header="Federal Tax %" 
                                   Value="{x:Bind ViewModel.FederalTaxPercent, Mode=TwoWay}"
                                   Style="{StaticResource FormNumberBoxStyle}"
                                   Minimum="0"
                                   Maximum="50"
                                   SmallChange="0.5"
                                   LargeChange="1" />
                        
                        <NumberBox Grid.Row="0" Grid.Column="1"
                                   Header="State Tax %" 
                                   Value="{x:Bind ViewModel.StateTaxPercent, Mode=TwoWay}"
                                   Style="{StaticResource FormNumberBoxStyle}"
                                   Minimum="0"
                                   Maximum="20"
                                   SmallChange="0.5"
                                   LargeChange="1" />
                        
                        <NumberBox Grid.Row="1" Grid.Column="0"
                                   Header="Social Security %" 
                                   Value="{x:Bind ViewModel.SocialSecurityPercent, Mode=TwoWay}"
                                   Style="{StaticResource FormNumberBoxStyle}"
                                   Minimum="0"
                                   Maximum="15"
                                   SmallChange="0.1"
                                   LargeChange="0.5" />
                        
                        <NumberBox Grid.Row="1" Grid.Column="1"
                                   Header="Medicare %" 
                                   Value="{x:Bind ViewModel.MedicarePercent, Mode=TwoWay}"
                                   Style="{StaticResource FormNumberBoxStyle}"
                                   Minimum="0"
                                   Maximum="10"
                                   SmallChange="0.1"
                                   LargeChange="0.5" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Actions -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Save Settings" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{x:Bind ViewModel.SaveSettingsCommand}" />
                
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                              Width="24" Height="24" />
            </StackPanel>

            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>
    </ScrollViewer>
</Page>
