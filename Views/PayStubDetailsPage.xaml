<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PayrollManager.UI.Views.PayStubDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="24">
        <StackPanel MaxWidth="800">
            <!-- Header -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Pay Stub" Style="{StaticResource PageTitleStyle}" Margin="0" />
                    <TextBlock Text="{x:Bind ViewModel.EmployeeName, Mode=OneWay}" FontSize="18" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <TextBlock Text="{x:Bind ViewModel.PayPeriodText, Mode=OneWay}" FontSize="14" 
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="NET PAY" Style="{StaticResource LabelStyle}" HorizontalAlignment="Right" />
                    <TextBlock Text="{x:Bind ViewModel.NetPay, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                               FontSize="36" FontWeight="Bold" 
                               Foreground="{StaticResource SuccessBrush}" HorizontalAlignment="Right" />
                </StackPanel>
            </Grid>

            <!-- Earnings Section with Earning Lines Table -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="EARNINGS" Style="{StaticResource SectionTitleStyle}" />
                    
                    <!-- Earnings Table -->
                    <controls:DataGrid x:Name="EarningsGrid"
                                       AutoGenerateColumns="False"
                                       IsReadOnly="True"
                                       CanUserReorderColumns="False"
                                       CanUserResizeColumns="True"
                                       HeadersVisibility="Column"
                                       GridLinesVisibility="Horizontal"
                                       MaxHeight="200"
                                       ItemsSource="{x:Bind ViewModel.EarningLines, Mode=OneWay}">
                        <controls:DataGrid.Columns>
                            <controls:DataGridTextColumn Header="Type" Binding="{Binding TypeDisplay}" Width="120" />
                            <controls:DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" />
                            <controls:DataGridTemplateColumn Header="Hours" Width="80">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding HoursDisplay}" 
                                                   HorizontalAlignment="Right" VerticalAlignment="Center" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>
                            <controls:DataGridTemplateColumn Header="Rate" Width="100">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding RateDisplay}" 
                                                   HorizontalAlignment="Right" VerticalAlignment="Center" 
                                                   Style="{StaticResource CurrencyStyle}" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>
                            <controls:DataGridTemplateColumn Header="Amount" Width="120">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding AmountDisplay}" 
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"
                                                   FontWeight="{Binding IsTotalRow, Converter={StaticResource BoolToFontWeightConverter}}"
                                                   Style="{StaticResource CurrencyStyle}" />
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>

                    <!-- Gross Pay Total -->
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Gross Pay" FontWeight="SemiBold" FontSize="16" />
                        <TextBlock Grid.Column="1" x:Name="GrossPayText" FontWeight="Bold" FontSize="16" 
                                   HorizontalAlignment="Right" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Pre-Tax Deductions Section -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="PRE-TAX DEDUCTIONS" Style="{StaticResource SectionTitleStyle}" />
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="401(k) Contribution" />
                        <TextBlock Grid.Column="1" 
                                   Text="{x:Bind ViewModel.PreTax401k, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                   HorizontalAlignment="Right" 
                                   Foreground="{StaticResource WarningBrush}" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Taxes Section -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="TAXES" Style="{StaticResource SectionTitleStyle}" />
                    
                    <Grid RowSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Federal Income Tax" />
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                   Text="{x:Bind ViewModel.TaxFederal, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                   HorizontalAlignment="Right" 
                                   Foreground="{StaticResource WarningBrush}" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="State Income Tax" />
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                   Text="{x:Bind ViewModel.TaxState, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                   HorizontalAlignment="Right" 
                                   Foreground="{StaticResource WarningBrush}" />

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Social Security" />
                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                   Text="{x:Bind ViewModel.TaxSocialSecurity, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                   HorizontalAlignment="Right" 
                                   Foreground="{StaticResource WarningBrush}" />

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Medicare" />
                        <TextBlock Grid.Row="3" Grid.Column="1" 
                                   Text="{x:Bind ViewModel.TaxMedicare, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                   HorizontalAlignment="Right" 
                                   Foreground="{StaticResource WarningBrush}" />

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Total Taxes" FontWeight="SemiBold" Margin="0,8,0,0" />
                        <TextBlock Grid.Row="4" Grid.Column="1" 
                                   Text="{x:Bind ViewModel.TotalTaxes, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                   HorizontalAlignment="Right" 
                                   FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}" Margin="0,8,0,0" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Post-Tax Deductions Section -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="POST-TAX DEDUCTIONS" Style="{StaticResource SectionTitleStyle}" />
                    
                    <Grid RowSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Health Insurance" />
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                   Text="{x:Bind ViewModel.HealthInsurance, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                   HorizontalAlignment="Right" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Other Deductions" />
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                   Text="{x:Bind ViewModel.OtherDeductions, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                   HorizontalAlignment="Right" />

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Total Deductions" FontWeight="SemiBold" Margin="0,8,0,0" />
                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                   Text="{x:Bind ViewModel.TotalDeductions, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                   HorizontalAlignment="Right" 
                                   FontWeight="SemiBold" Margin="0,8,0,0" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Earnings Summary by Type -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="EARNINGS BREAKDOWN" Style="{StaticResource SectionTitleStyle}" />
                    
                    <Grid ColumnSpacing="32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Regular" Style="{StaticResource LabelStyle}" />
                            <TextBlock Text="{x:Bind ViewModel.RegularEarnings, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                       Style="{StaticResource LargeValueStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Overtime" Style="{StaticResource LabelStyle}" />
                            <TextBlock Text="{x:Bind ViewModel.OvertimeEarnings, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                       Style="{StaticResource LargeValueStyle}" 
                                       Foreground="{StaticResource AccentBrush}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Bonus" Style="{StaticResource LabelStyle}" />
                            <TextBlock Text="{x:Bind ViewModel.BonusEarnings, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                       Style="{StaticResource LargeValueStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Commission" Style="{StaticResource LabelStyle}" />
                            <TextBlock Text="{x:Bind ViewModel.CommissionEarnings, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                       Style="{StaticResource LargeValueStyle}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- YTD Summary -->
            <Border Style="{StaticResource CardStyle}" Background="{StaticResource SectionBackgroundBrush}">
                <StackPanel>
                    <TextBlock Text="YEAR-TO-DATE SUMMARY" Style="{StaticResource SectionTitleStyle}" />
                    
                    <Grid ColumnSpacing="32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="YTD Gross" Style="{StaticResource LabelStyle}" />
                            <TextBlock Text="{x:Bind ViewModel.YtdGross, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                       Style="{StaticResource LargeValueStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="YTD Taxes" Style="{StaticResource LabelStyle}" />
                            <TextBlock Text="{x:Bind ViewModel.YtdTaxes, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                       Style="{StaticResource LargeValueStyle}" 
                                       Foreground="{StaticResource WarningBrush}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="YTD Net" Style="{StaticResource LabelStyle}" />
                            <TextBlock Text="{x:Bind ViewModel.YtdNet, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                       Style="{StaticResource LargeValueStyle}" 
                                       Foreground="{StaticResource SuccessBrush}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Export Buttons -->
            <StackPanel Orientation="Horizontal">
                <Button Content="Export as CSV" 
                        Command="{x:Bind ViewModel.DownloadCsvCommand}" />
                <Button Content="Export as PDF" 
                        Command="{x:Bind ViewModel.DownloadPdfCommand}" />
                <Button Content="Back" 
                        Command="{x:Bind ViewModel.NavigateBackCommand}" />
            </StackPanel>

            <!-- Debug Toggle (only functional in Debug builds) -->
            <Border x:Name="DebugSection" 
                    Style="{StaticResource CardStyle}" Margin="0,16,0,0" 
                    Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}">
                <StackPanel>
                    <ToggleSwitch Header="Debug Mode" 
                                  IsOn="{x:Bind ViewModel.IsDebugModeEnabled, Mode=TwoWay}" />
                    <TextBlock Text="{x:Bind ViewModel.DebugInfo, Mode=OneWay}" 
                               FontFamily="Consolas" 
                               FontSize="11" 
                               Margin="0,8,0,0"
                               TextWrapping="Wrap"
                               Visibility="{x:Bind ViewModel.IsDebugModeEnabled, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
