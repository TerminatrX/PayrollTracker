<Page x:ConnectionId='1'
    x:Class="PayrollManager.UI.Views.EmployeeManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <controls:DataGrid x:ConnectionId='2' x:Name="EmployeesGrid"
                           AutoGenerateColumns="False"
                                                           
                                                                                >
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" />
                <controls:DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" />
                <controls:DataGridCheckBoxColumn Header="Hourly" Binding="{Binding IsHourly}" />
                <controls:DataGridTextColumn Header="Annual Salary" Binding="{Binding AnnualSalary}" />
                <controls:DataGridTextColumn Header="Hourly Rate" Binding="{Binding HourlyRate}" />
                <controls:DataGridTextColumn Header="401k %" Binding="{Binding PreTax401kPercent}" />
                <controls:DataGridTextColumn Header="Health Ins" Binding="{Binding HealthInsurancePerPeriod}" />
                <controls:DataGridTextColumn Header="Other Ded" Binding="{Binding OtherDeductionsPerPeriod}" />
                <controls:DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" />
            </controls:DataGrid.Columns>
        </controls:DataGrid>

        <StackPanel Grid.Row="1" Spacing="12" Margin="0,16,0,0">
            <TextBlock Text="Employee Details" FontSize="18" FontWeight="SemiBold" />
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBox x:ConnectionId='11' Header="First Name" Width="200"                                               />
                <TextBox x:ConnectionId='12' Header="Last Name" Width="200"                                              />
                <CheckBox x:ConnectionId='13' Content="Active"                                                   />
                <ComboBox x:ConnectionId='14' Header="Pay Type"
                          Width="160"
                                                                                   >
                    <ComboBoxItem Content="Salary" />
                    <ComboBoxItem Content="Hourly" />
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="12">
                <NumberBox x:ConnectionId='6' Header="Annual Salary"
                           Width="180"
                                                                      
                                                                             />
                <NumberBox x:ConnectionId='7' Header="Hourly Rate"
                           Width="180"
                                                                      
                                                                           />
                <NumberBox x:ConnectionId='8' Header="401k %"
                           Width="120"
                                                                                  />
                <NumberBox x:ConnectionId='9' Header="Health Ins/Period"
                           Width="180"
                                                                                         />
                <NumberBox x:ConnectionId='10' Header="Other Deductions/Period"
                           Width="200"
                                                                                         />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button x:ConnectionId='3' Content="New"                           />
                <Button x:ConnectionId='4' Content="Save"                            />
                <Button x:ConnectionId='5' Content="Refresh"                       />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

