<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="PayrollManager.UI.Views.EmployeeManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Text="Employees" Style="{StaticResource PageTitleStyle}" Grid.Row="0" />

        <!-- Search and Filters -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="16" Margin="0,0,0,16">
            <TextBox x:ConnectionId='35' x:Name="SearchBox"
                     PlaceholderText="Search by name or ID..."
                     Width="280"
                                                                                                           
                     Style="{StaticResource FormTextBoxStyle}" />

            <ComboBox x:ConnectionId='36' Header="Status" Width="140"
                                                                                       >
                <ComboBoxItem Content="All" />
                <ComboBoxItem Content="Active" />
                <ComboBoxItem Content="Inactive" />
            </ComboBox>

            <ComboBox x:ConnectionId='37' Header="Pay Type" Width="140"
                                                                                        >
                <ComboBoxItem Content="All" />
                <ComboBoxItem Content="Salary" />
                <ComboBoxItem Content="Hourly" />
            </ComboBox>

            <Button x:ConnectionId='38' Content="New Employee" 
                    Style="{StaticResource PrimaryButtonStyle}"
                                                                   
                    Margin="24,18,0,0" />
        </StackPanel>

        <!-- Main Content: Grid + Details Panel -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="500" />
                <ColumnDefinition Width="380" />
            </Grid.ColumnDefinitions>

            <!-- Employee DataGrid -->
            <controls:DataGrid x:ConnectionId='4' x:Name="EmployeesGrid"
                               Grid.Column="0"
                               AutoGenerateColumns="False"
                                                                                              
                                                                                
                               CanUserSortColumns="True"
                               CanUserReorderColumns="True"
                               CanUserResizeColumns="True"
                               IsReadOnly="True"
                               Margin="0,0,16,0">
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" />
                    <controls:DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*" />
                    <controls:DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*" />
                    <controls:DataGridTemplateColumn Header="Pay Type" Width="80">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding IsHourly, Converter={StaticResource PayTypeConverter}}" 
                                           VerticalAlignment="Center" />
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                    <controls:DataGridTemplateColumn Header="Annual Salary" Width="120">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding AnnualSalary, Converter={StaticResource CurrencyConverter}}" 
                                           HorizontalAlignment="Right" VerticalAlignment="Center" 
                                           Style="{StaticResource CurrencyStyle}" />
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                    <controls:DataGridTemplateColumn Header="Hourly Rate" Width="100">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding HourlyRate, Converter={StaticResource CurrencyConverter}}" 
                                           HorizontalAlignment="Right" VerticalAlignment="Center"
                                           Style="{StaticResource CurrencyStyle}" />
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                    <controls:DataGridTemplateColumn Header="401k %" Width="80">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding PreTax401kPercent, Converter={StaticResource PercentConverter}}" 
                                           HorizontalAlignment="Right" VerticalAlignment="Center" />
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                    <controls:DataGridTemplateColumn Header="Status" Width="80">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="10" Padding="8,2" 
                                        HorizontalAlignment="Center"
                                        Background="{Binding IsActive, Converter={StaticResource StatusColorConverter}}">
                                    <TextBlock Text="{Binding IsActive, Converter={StaticResource StatusTextConverter}}" 
                                               FontSize="11" Foreground="White" />
                                </Border>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                </controls:DataGrid.Columns>
            </controls:DataGrid>

            <!-- Details Panel -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="16">
                    <!-- Profile Section -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="PROFILE" Style="{StaticResource SectionTitleStyle}" />
                            
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <PersonPicture x:ConnectionId='25' Width="64" Height="64"                                                               />
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock x:ConnectionId='26'                                                        
                                               FontSize="18" FontWeight="SemiBold" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Border x:ConnectionId='27' CornerRadius="10" Padding="8,2"
                                                                                                                                                             >
                                            <TextBlock x:ConnectionId='29'                                                                                                        
                                                       FontSize="11" Foreground="White" />
                                        </Border>
                                        <TextBlock x:ConnectionId='28'                                                              
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <Grid ColumnSpacing="12" RowSpacing="8" Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBox x:ConnectionId='21' Grid.Row="0" Grid.Column="0" Header="First Name"
                                                                                                                                      />
                                <TextBox x:ConnectionId='22' Grid.Row="0" Grid.Column="1" Header="Last Name"
                                                                                                                                     />

                                <ComboBox x:ConnectionId='23' Grid.Row="1" Grid.Column="0" Header="Pay Type" HorizontalAlignment="Stretch"
                                                                                                                                                          >
                                    <ComboBoxItem Content="Salary" />
                                    <ComboBoxItem Content="Hourly" />
                                </ComboBox>
                                <CheckBox x:ConnectionId='24' Grid.Row="1" Grid.Column="1" Content="Active" 
                                                                                                     
                                          VerticalAlignment="Bottom" Margin="0,0,0,4" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Compensation Section -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="COMPENSATION" Style="{StaticResource SectionTitleStyle}" />
                            
                            <Grid ColumnSpacing="12" RowSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="Annualized Salary" Style="{StaticResource LabelStyle}" />
                                    <TextBlock x:ConnectionId='20'                                                                                                              
                                               Style="{StaticResource LargeValueStyle}" />
                                </StackPanel>

                                <NumberBox x:ConnectionId='15' Grid.Row="0" Grid.Column="1" Header="401k %"
                                                                                                                                                                
                                           Minimum="0" Maximum="25" SmallChange="0.5" />

                                <NumberBox x:ConnectionId='16' Grid.Row="1" Grid.Column="0" Header="Annual Salary"
                                                                                                                                                           
                                                                                                                                                       
                                           Minimum="0" />

                                <NumberBox x:ConnectionId='17' Grid.Row="1" Grid.Column="1" Header="Hourly Rate"
                                                                                                                                                         
                                                                                                      
                                           Minimum="0" />

                                <NumberBox x:ConnectionId='18' Grid.Row="2" Grid.Column="0" Header="Health Ins/Period"
                                                                                                                                                                       
                                           Minimum="0" />

                                <NumberBox x:ConnectionId='19' Grid.Row="2" Grid.Column="1" Header="Other Deductions"
                                                                                                                                                                       
                                           Minimum="0" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Pay Summary Section -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="PAY SUMMARY" Style="{StaticResource SectionTitleStyle}" />
                            
                            <Grid ColumnSpacing="16" RowSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="Last Pay Date" Style="{StaticResource LabelStyle}" />
                                    <TextBlock x:ConnectionId='14'                                                                                                     
                                               Style="{StaticResource ValueStyle}" />
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="1">
                                    <TextBlock Text="Last Gross" Style="{StaticResource LabelStyle}" />
                                    <TextBlock x:ConnectionId='13'                                                                                                       
                                               Style="{StaticResource ValueStyle}" />
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                                    <TextBlock Text="Last Net Pay" Style="{StaticResource LabelStyle}" />
                                    <TextBlock x:ConnectionId='12'                                                                                                     
                                               Style="{StaticResource LargeValueStyle}" Foreground="{StaticResource SuccessBrush}" />
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="0">
                                    <TextBlock Text="YTD Gross" Style="{StaticResource LabelStyle}" />
                                    <TextBlock x:ConnectionId='11'                                                                                                      
                                               Style="{StaticResource ValueStyle}" />
                                </StackPanel>
                                <StackPanel Grid.Row="2" Grid.Column="1">
                                    <TextBlock Text="YTD Taxes" Style="{StaticResource LabelStyle}" />
                                    <TextBlock x:ConnectionId='10'                                                                                                      
                                               Style="{StaticResource ValueStyle}" />
                                </StackPanel>

                                <StackPanel Grid.Row="3" Grid.ColumnSpan="2">
                                    <TextBlock Text="YTD Net" Style="{StaticResource LabelStyle}" />
                                    <TextBlock x:ConnectionId='9'                                                                                                    
                                               Style="{StaticResource LargeValueStyle}" Foreground="{StaticResource AccentBrush}" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button x:ConnectionId='5' Content="Save" 
                                Style="{StaticResource PrimaryButtonStyle}"
                                                                                
                                                                                    />
                        <Button x:ConnectionId='6' Content="Delete" 
                                Style="{StaticResource DangerButtonStyle}"
                                                                                  
                                                                                      />
                        <Button x:ConnectionId='7' Content="Refresh" 
                                                                                  />
                        <ProgressRing x:ConnectionId='8'                                                      
                                      Width="24" Height="24" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}" 
                Padding="12,8" Margin="-24,16,-24,-24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock x:ConnectionId='2'                                                      
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12" />
                <TextBlock Grid.Column="1" FontSize="12"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                    <Run Text="Last saved: " />
                    <Run x:ConnectionId='3'                                                            />
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Page>

