<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="PayrollManager.UI.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24" MaxWidth="800">
            <TextBlock Text="Company Settings" Style="{StaticResource PageTitleStyle}" />

            <!-- Company Information -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="COMPANY INFORMATION" Style="{StaticResource SectionTitleStyle}" />
                    
                    <TextBox x:ConnectionId='11' Header="Company Name" 
                                                                               
                             Style="{StaticResource FormTextBoxStyle}"
                             Width="400" />
                    
                    <TextBox x:ConnectionId='12' Header="Company Address" 
                                                                                  
                             Style="{StaticResource FormTextBoxStyle}"
                             Width="400"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="80" />
                    
                    <TextBox x:ConnectionId='13' Header="Tax ID / EIN" 
                                                                         
                             Style="{StaticResource FormTextBoxStyle}"
                             Width="200" />
                </StackPanel>
            </Border>

            <!-- Pay Configuration -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="PAY CONFIGURATION" Style="{StaticResource SectionTitleStyle}" />
                    
                    <StackPanel Orientation="Horizontal" Spacing="24">
                        <NumberBox x:ConnectionId='9' Header="Pay Periods Per Year" 
                                                                                            
                                   Style="{StaticResource FormNumberBoxStyle}"
                                   Minimum="1"
                                   Maximum="52"
                                   SpinButtonPlacementMode="Compact" />
                        
                        <NumberBox x:ConnectionId='10' Header="Default Hours Per Period" 
                                                                                                
                                   Style="{StaticResource FormNumberBoxStyle}"
                                   Minimum="1"
                                   Maximum="168"
                                   SpinButtonPlacementMode="Compact" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Tax Rates -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="TAX RATES (%)" Style="{StaticResource SectionTitleStyle}" />
                    
                    <Grid ColumnSpacing="24" RowSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <NumberBox x:ConnectionId='5' Grid.Row="0" Grid.Column="0"
                                   Header="Federal Tax %" 
                                                                                            
                                   Style="{StaticResource FormNumberBoxStyle}"
                                   Minimum="0"
                                   Maximum="50"
                                   SmallChange="0.5"
                                   LargeChange="1" />
                        
                        <NumberBox x:ConnectionId='6' Grid.Row="0" Grid.Column="1"
                                   Header="State Tax %" 
                                                                                          
                                   Style="{StaticResource FormNumberBoxStyle}"
                                   Minimum="0"
                                   Maximum="20"
                                   SmallChange="0.5"
                                   LargeChange="1" />
                        
                        <NumberBox x:ConnectionId='7' Grid.Row="1" Grid.Column="0"
                                   Header="Social Security %" 
                                                                                                
                                   Style="{StaticResource FormNumberBoxStyle}"
                                   Minimum="0"
                                   Maximum="15"
                                   SmallChange="0.1"
                                   LargeChange="0.5" />
                        
                        <NumberBox x:ConnectionId='8' Grid.Row="1" Grid.Column="1"
                                   Header="Medicare %" 
                                                                                          
                                   Style="{StaticResource FormNumberBoxStyle}"
                                   Minimum="0"
                                   Maximum="10"
                                   SmallChange="0.1"
                                   LargeChange="0.5" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Actions -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button x:ConnectionId='3' Content="Save Settings" 
                        Style="{StaticResource PrimaryButtonStyle}"
                                                                         />
                
                <ProgressRing x:ConnectionId='4'                                                      
                              Width="24" Height="24" />
            </StackPanel>

            <TextBlock x:ConnectionId='2'                                                      
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>
    </ScrollViewer>
</Page>

