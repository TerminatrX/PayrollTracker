<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="PayrollManager.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PayrollManager.UI"
    xmlns:converters="using:PayrollManager.UI.Converters"
    RequestedTheme="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Theme-aware color definitions (Dark theme by default) -->
            <Color x:Key="PrimaryColor">#2B8CEE</Color>
            <Color x:Key="PrimaryHoverColor">#3D9DFF</Color>
            <Color x:Key="PrimaryPressedColor">#1A7BD6</Color>
            
            <!-- Dark Theme Colors (default) -->
            <Color x:Key="BackgroundPrimary">#101922</Color>
            <Color x:Key="BackgroundSecondary">#192633</Color>
            <Color x:Key="BackgroundTertiary">#233648</Color>
            <Color x:Key="BackgroundElevated">#2D3A4A</Color>
            <Color x:Key="SurfaceDefault">#192633</Color>
            <Color x:Key="SurfaceSubtle">#233648</Color>
            <Color x:Key="SurfaceHover">#2D3A4A</Color>
            <Color x:Key="SurfacePressed">#364556</Color>
            <Color x:Key="BorderDefault">#233648</Color>
            <Color x:Key="BorderSubtle">#2D3A4A</Color>
            <Color x:Key="BorderStrong">#364556</Color>
            <Color x:Key="TextPrimary">#FFFFFF</Color>
            <Color x:Key="TextSecondary">#B0B8C4</Color>
            <Color x:Key="TextTertiary">#7A8494</Color>
            <Color x:Key="TextDisabled">#4A5568</Color>
            <Color x:Key="SuccessColor">#22C55E</Color>
            <Color x:Key="WarningColor">#F97316</Color>
            <Color x:Key="ErrorColor">#EF4444</Color>
            <Color x:Key="InfoColor">#3B82F6</Color>
            <Color x:Key="StatusActiveColor">#22C55E</Color>
            <Color x:Key="StatusTerminatedColor">#6B7280</Color>
            <Color x:Key="StatusLeaveColor">#F59E0B</Color>
            
            <!-- Legacy color aliases for backward compatibility -->
            <Color x:Key="AccentColor">#2B8CEE</Color>
            <Color x:Key="CardBackgroundColor">#192633</Color>
            <Color x:Key="SectionBackgroundColor">#101922</Color>

            <!-- Value Converters -->
            <converters:CurrencyConverter x:Key="CurrencyConverter" />
            <converters:PercentConverter x:Key="PercentConverter" />
            <converters:PayTypeConverter x:Key="PayTypeConverter" />
            <converters:StatusTextConverter x:Key="StatusTextConverter" />
            <converters:StatusColorConverter x:Key="StatusColorConverter" />
            <converters:DateConverter x:Key="DateConverter" />
            <converters:DecimalToDoubleConverter x:Key="DecimalToDoubleConverter" />
            <converters:BoolToIndexConverter x:Key="BoolToIndexConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
            <converters:StepIndicatorConverter x:Key="StepIndicatorConverter" />
            <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter" />

            <!-- Legacy brush aliases for backward compatibility -->
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}" />
            <SolidColorBrush x:Key="SectionBackgroundBrush" Color="{StaticResource SectionBackgroundColor}" />
            
            <!-- Additional Theme Resources for WinUI 3 (using theme colors) -->
            <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="{StaticResource SurfaceDefault}" />
            <SolidColorBrush x:Key="CardStrokeColorDefaultBrush" Color="{StaticResource BorderDefault}" />
            <SolidColorBrush x:Key="SubtleFillColorSecondaryBrush" Color="{StaticResource SurfaceSubtle}" />
            <SolidColorBrush x:Key="LayerFillColorDefaultBrush" Color="{StaticResource BackgroundSecondary}" />
            <SolidColorBrush x:Key="DividerStrokeColorDefaultBrush" Color="{StaticResource BorderDefault}" />
            <SolidColorBrush x:Key="AcrylicBackgroundFillColorDefaultBrush" Color="{StaticResource BackgroundSecondary}" />
            <SolidColorBrush x:Key="SolidBackgroundFillColorQuarternaryBrush" Color="{StaticResource SurfaceSubtle}" />

            <!-- Additional Typography Styles (not in Theme.xaml) -->
            <Style x:Key="LabelStyle" TargetType="TextBlock" BasedOn="{StaticResource TypographySmallStrong}">
                <Setter Property="Margin" Value="0,0,0,{StaticResource SpacingXXS}" />
            </Style>

            <Style x:Key="ValueStyle" TargetType="TextBlock" BasedOn="{StaticResource TypographyBody}" />

            <Style x:Key="LargeValueStyle" TargetType="TextBlock" BasedOn="{StaticResource TypographyH2}" />

            <Style x:Key="CurrencyStyle" TargetType="TextBlock" BasedOn="{StaticResource TypographyBody}">
                <Setter Property="FontFamily" Value="Consolas" />
            </Style>

            <!-- Legacy Status Pill Styles (using new InfoBadge styles) -->
            <Style x:Key="ActivePillStyle" TargetType="Border" BasedOn="{StaticResource InfoBadgeActive}" />
            <Style x:Key="InactivePillStyle" TargetType="Border" BasedOn="{StaticResource InfoBadgeTerminated}" />

            <!-- Standard TextBox Style -->
            <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="Padding" Value="8,6,8,6" />
                <Setter Property="MinWidth" Value="200" />
            </Style>

            <!-- Standard NumberBox Style -->
            <Style x:Key="FormNumberBoxStyle" TargetType="NumberBox">
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="MinWidth" Value="150" />
            </Style>

            <!-- Validation Error Style -->
            <Style x:Key="ValidationErrorStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="11" />
                <Setter Property="Foreground" Value="{StaticResource ErrorBrush}" />
                <Setter Property="Margin" Value="0,2,0,0" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
